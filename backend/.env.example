# ============================================
# AutoComply AI - Environment Configuration
# Copy this file to `.env` and fill in your keys
# ============================================

# OpenAI API key (for reasoning + embeddings)
AUTOCOMPLY_OPENAI_KEY=your-openai-key-here

# Gemini API key (for OCR + vision parsing)
AUTOCOMPLY_GEMINI_KEY=your-gemini-key-here

# Runtime environment
ENV=development

# ------------------------------------------------------------------------------
# n8n / Automation integration (optional for local demo)
# ------------------------------------------------------------------------------

# Base URL where n8n is reachable from the backend.
# In docker-compose this would typically be: http://n8n:5678
AUTOCOMPLY_N8N_BASE_URL=http://n8n:5678

# Optional webhook endpoint for Slack alerts workflow (slack_alerts.json).
# Example: /webhook/autocomply/slack-alert
AUTOCOMPLY_N8N_SLACK_WEBHOOK_PATH=/webhook/autocomply/slack-alert

